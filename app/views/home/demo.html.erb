  <div class="modal" id="configure" style="display:none;">
    <div class="modal-header">
      <a class="close" data-dismiss="modal">Ã—</a>
      <h3>Configure your timer</h3>
    </div>

    

    <form class="form-horizontal">
      <div class="modal-body">
        <fieldset>
          <div class="control-group">
            <label class="control-label" for="time">Time</label>
            <div class="controls">
              <input class="input-mini focused" id="hour" type="text" value="" placeholder="HH">
              <input class="input-mini" id="minutes" type="text" value="" placeholder="MM">
              <input class="input-mini" id="secondes" type="text" value="" placeholder="SS">
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="hashtag">#hashtag</label>
            <div class="controls">
              <input class="input-xlarge" id="hashtag" type="text" placeholder="#hashtag">
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">Public URL</label>
            <div class="controls">
              <span class="help-inline"><a href="http://stopwat.ch/swalau" target="_blank">http://stopwat.ch/swalau</a></span>
              <a class="btn" href=""><i class="icon-qrcode"></i> View QR Code</a>
            </div>
          </div>  
          <div class="control-group">
            <label class="control-label">Administration URL</label>
            <div class="controls">
              <span class="help-inline"><a href="http://stopwat.ch/swalau" target="_blank">http://stopwat.ch/swalauads8y91h2iu</a></span>
              <a class="btn" href=""><i class="icon-qrcode"></i> View QR Code</a>
            </div>
          </div>  
        </fieldset>
      </div>
      <div class="form-actions" class="modal-footer">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <button class="btn" data-dismiss="modal">Cancel</button>
      </div>
    </form>


  </div>


